<UserControl x:Class="WpfMojaApp1.views.NarudzbaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:res="clr-namespace:WpfMojaApp1.resources" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
         
            <RowDefinition Height="Auto"/>
           
        </Grid.RowDefinitions>


        <DataGrid x:Name="dataGridNarudzbe"
          Grid.Row="0"
          ItemsSource="{Binding Narudzbe}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True"
          Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static res:Strings.Datum}" Binding="{Binding Datum, StringFormat=\{0:yyyy-MM-dd\}}" Width="*"/>
                <DataGridTextColumn Header="{x:Static res:Strings.Dobavljac}" Binding="{Binding DobavljacNazivFirme}" Width="*"/>
                <DataGridTextColumn Header="{x:Static res:Strings.Menadzer}" Binding="{Binding MenadzerRadnikJmb}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Forma za dodavanje nove narudžbe -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" >

            <!-- Datum (automatski popunjen trenutnim datumom) -->
            <Label x:Name="lblDatum" VerticalAlignment="Center"/>
            <TextBox Name="txtDatum" Width="120" VerticalAlignment="Center" IsReadOnly="True"
                    Text="{Binding NovoDatum, Mode=OneWay}" />


            <!-- Naziv dobavljača  -->
            <Label x:Name="lblDobavljac" VerticalAlignment="Center"/>
            <ComboBox Name="cmbDobavljac" 
                Width="150" 
                VerticalAlignment="Center"
                ItemsSource="{Binding Dobavljaci}" 
                SelectedItem="{Binding OdabraniDobavljac, Mode=TwoWay}" />


            <!-- Polje za unos JMB -->
            <Label x:Name="lblMenadzer" VerticalAlignment="Center"/>
            <TextBox Name="txtMenadzerJmb" Width="150" VerticalAlignment="Center" />

            <!-- Dugme za dodavanje -->
            <Button x:Name="btnDodaj" Content="{x:Static res:Strings.Dodaj}" Width="100" VerticalAlignment="Center" Margin="10,0,0,0"
                Click="DodajNarudzbu_Click" />

        </StackPanel>
    </Grid>
</UserControl>
