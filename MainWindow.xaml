<Window x:Class="WpfMojaApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMojaApp1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:WpfMojaApp1.views"
        xmlns:res="clr-namespace:WpfMojaApp1.resources"

        mc:Ignorable="d"
        Title="Sistem za proizvodnju drvene gradje" Height="450" Width="800">

    <DockPanel>
        <!-- HEADER MENI -->
        <Grid DockPanel.Dock="Top" Background="#EEE" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                
            </Grid.ColumnDefinitions>

            <!-- Meni dugmad -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="5">
                <Button x:Name="buttonAktivniProizvodi"
                        Content="{x:Static res:Strings.AktivniProizvodi}"
                        Margin="5" 
                        Click="PrikaziAktivneProizvode" />
                <Button x:Name="buttonPregledRacuna"
                        Content="{x:Static res:Strings.PregledRacuna}"
                        Margin="5" 
                        Click="PrikaziRacune" />
                <Button x:Name="buttonNarudzbe"
                        Content="{x:Static res:Strings.Narudzbe}"
                        Margin="5" 
                        Click="PrikaziNarudzbe" />
                
                
            </StackPanel>

            <!-- Dugmad za jezik, desno -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,5,15,5">
                <Button Content="Srp" MinWidth="70" Margin="5,0" Click="ChangeToSerbian_Click" />
                <Button Content="Eng" MinWidth="70" Margin="5,0" Click="ChangeToEnglish_Click" />
                <Button Content="{x:Static res:Strings.OdjaviSe}" MinWidth="70" Margin="5,0,10,0" Click="OdjaviSe_Click" />

            </StackPanel>
        </Grid>

        <!-- MJESTO ZA PRIKAZ SADRŽAJA -->
        <ContentControl x:Name="MainContentControl" Margin="10"/>

        
    </DockPanel>


</Window>
